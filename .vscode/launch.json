  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI Production",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.envs/prod/.env"
    },
    {
      "name": "FastAPI Local",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.envs/local/.env"
    },
    {
      "name": "Database upgrade (PROD)",
      "type": "debugpy",
      "request": "launch",
      "module": "alembic",
      "args": ["upgrade", "head"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.envs/local/.env"
    },
    {
      "name": "Generate DB revisions (PROD)",
      "type": "debugpy",
      "request": "launch",
      "module": "alembic",
      "args": ["revision", "--autogenerate"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.envs/local/.env"
    }
  ]
}
